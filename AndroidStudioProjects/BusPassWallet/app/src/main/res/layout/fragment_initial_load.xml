<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBG">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_logo"
        android:src="@drawable/bmtc_logo"/>

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="@dimen/margin_top_progress_bar"
        android:layout_width="@dimen/width_progress_bar"
        android:layout_height="@dimen/height_progress_bar"
        android:layout_gravity="center_horizontal"
        style="?android:attr/android:progressBarStyleHorizontal"/>
</LinearLayout>